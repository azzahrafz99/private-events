<%= form_for @event do |f| %>
  <ul>
    <% @event.errors.full_messages.each do |erros| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% f.hidden_field(:user_id, :value => current_user.id) %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_field :date %><br />
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>
