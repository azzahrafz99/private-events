<!-- form_for -->
<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :Username %>
    <%= f.text_field :username %><br>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <%= f.submit "Sign Up", class: "btn btn-large btn-primary" %>
<% end %>
